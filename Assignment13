int main()
{
    int discNum;
    
    cout << "Welcome to Towers of Hanoi 2017, please input an integer between 1 and 100: ";
    do {
        cin >> discNum;
        if (discNum < 1 || discNum > 100) {
            cout << "Invalid input. ";
        }
    } while(discNum < 1 || discNum > 100);
    
    int start[discNum], end[discNum], aux[discNum];
    
    //Tower start("Start",discNum);
    //Tower end("End",discNum);
    //Tower aux("Aux",discNum);
    //start.disks.size(discNum);
    //end.disks.size(discNum);
    //aux.disks.size(discNum);
    
    for (int i = discNum; i > 0; i--) {
        start[i] = i;
        end[i] = 0;
        aux[i] = 0;
    }
    

    return 0;
}

void move(int n, int s[n],int e[n],int a[n]) {
    //move s to a
    a[n] = s[n];
    s[n] = 0;
    
}

void display(int n, int s[n], int e[n], int a[n]) {
    cout << "A: ";
    for (int i = discNum; i > 0; i--) {
        if (i == 0) { cout << "_ "; }
        else { cout << i << " "; }
    }
}




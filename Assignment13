#include <iostream>
#include <stack>
#include <vector>

using namespace std;

void move(int, vector<char>, vector<char>, vector<char>);
void display(int, vector<char>, vector<char>, vector<char>);

int main()
{
    int discNum;
    
    std::cout << "Welcome to Towers of Hanoi 2017, please input an integer between 1 and 100: ";
    do {
        std::cin >> discNum;
        if (discNum < 1 || discNum > 100) {
            std::cout << "Invalid input. ";
        }
    } while(discNum < 1 || discNum > 100);
    
    vector<char> a(discNum), b(discNum), c(discNum);
    
    for (int i = 1; i < discNum; i++) {
        a[i] = i;
    }
    for (int i = 1; i < discNum; i++) {
        b[i] = '_';
        c[i] = '_';
    }
    
    display(discNum, a, b, c);
    
    //move(discNum, a, b, c);

    return 0;
}

void move(int n, vector<char> a, vector<char> b, vector<char> c) {
    
}

void display(int n, vector<char> a, vector<char> b, vector<char> c) {
    std::cout << "A  ";
    for (vector<char>::const_iterator i = a.begin(); i != a.end(); i++) {
        std::cout << static_cast<int>(*i) << ' ';
    }
}

#include <iostream>
#include <vector>
#include <iterator>

using namespace std;

class Tower {
        string name;
        int numberOfDisks;
    public:
        Tower(string, int);
        string disks[3] = {"-","-","-"};
        void print() {
            cout << name << "   ";
            for(auto i = 0; i < numberOfDisks; i++)
            {
                cout << disks[i] << " ";
            }
        }
    };

Tower::Tower(string n, int disks) {
    name = n;
    numberOfDisks = disks;
}

int main()
{
    int discNum;
    
    std::cout << "Welcome to Towers of Hanoi 2017, please input an integer between 1 and 100: ";
    do {
        std::cin >> discNum;
        if (discNum < 1 || discNum > 100) {
            std::cout << "Invalid input. ";
        }
    } while(discNum < 1 || discNum > 100);
    
    Tower start("Start",discNum);
    Tower end("End",discNum);
    Tower aux("Aux",discNum);
    //start.disks.size(discNum);
    //end.disks.size(discNum);
    //aux.disks.size(discNum);
    
    for (int i = discNum-1; i >= 0; i--) {
        start.disks[i] = i;
    }
    
    start.print();
    
    

    return 0;
}






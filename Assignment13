int main()
{
    int discNum;
    
    cout << "Welcome to Towers of Hanoi 2017, please input an integer between 1 and 100: ";
    do {
        cin >> discNum;
        if (discNum < 1 || discNum > 100) {
            cout << "Invalid input. ";
        }
    } while(discNum < 1 || discNum > 100);
    
    stack<int> start, end, aux;

    for (int i = discNum; i > 0; i--) {
        start.push(i);
    }
    
    hanoi(discNum, start, end, aux);

    return 0;
}

void hanoi(int n, stack<int> a, stack<int> b, stack<int> c) {
    if (n == 1) {
        b.push(a.top());
        a.pop();
        
        cout << "A: ";
        while(!a.empty()) {
            cout << a.top() << " ";
            a.pop();
        }
        cout << endl;
        
        cout << "B: ";
        while(!b.empty()) {
            cout << b.top() << " ";
            b.pop();
        }
        cout << endl;
        
        cout << "C: ";
        while(!c.empty()) {
            cout << c.top() << " ";
            c.pop();
        }
    }
    else {
        hanoi(n-1, a, c, b);
        b.push(a.top());
        a.pop();
        hanoi(n-1, b, a, c);
    }
    
}


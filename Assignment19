#include <iostream>
#include <string>

using namespace std;

struct Node {
    string name;
    Node left;
    Node right;
}node;

int main() {
    char choice;
    
    
    while(true) {
        cout << "Number of nodes: " << endl;
        cout << "Depth: " << endl;
        cout << "Full? " << endl;
        cout << "Complete?" << endl;
        cout << "Preorder: " << endl;
        cout << "Inorder: " << endl;
        cout << "Postorder: " < endl << endl;
        
        cout << "1. Add left child: " << endl;
        cout << "2. Add right child: " << endl;
        cout << "3. QUIT" << endl;
        cout << "INPUT: " << endl;
        cin >> choice;
        
        switch(choice) {
            case '1':
                break;
            case '2':
                break;
            case '3':
                return 0;
            default:
                cout << "Error";
                break;
        }
    }
}

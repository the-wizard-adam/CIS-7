#include <iostream>
#include <string>

using namespace std;

struct TreeNode {
    char nodeName;   
    TreeNode *left;
    TreeNode *right;
    
    TreeNode (char n) {
        nodeName = n;
        left = NULL;
        right = NULL;
    }
};

void addLeftNode(TreeNode *&root, char newItem) {
    if (root == NULL) {
        root = new TreeNode(newItem);
    }
    else
        addLeftNode(root->left, newItem);
}


int main() {
    char choice;
    TreeNode *root;
    root = new TreeNode('A');
    
    while(true) {
        cout << "Number of nodes: " << endl;
        cout << "Depth: " << endl;
        cout << "Full? " << endl;
        cout << "Complete?" << endl;
        cout << "Preorder: " << endl;
        cout << "Inorder: " << endl;
        cout << "Postorder: " << endl << endl;
        
        cout << "1. Add left child: " << endl;
        cout << "2. Add right child: " << endl;
        cout << "3. QUIT" << endl;
        cout << "INPUT: " << endl;
        cin >> choice;
        
        switch(choice) {
            case '1':
                char name;
                cout << "Name: ";
                cin >> name;
                addLeftNode(root, name);
                break;
            case '2':
                break;
            case '3':
                return 0;
            default:
                cout << "Error";
                break;
        }
    }
}

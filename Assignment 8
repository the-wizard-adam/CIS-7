#include <iostream>
using namespace std;

int main() {
    int num, 
        userGuess, 
        result = 0;
        
    cout << "Enter a number." << endl;
    cin >> num;
    cout << num << endl;
    cout << endl 
         << "How many prime numbers are between "
         << num
         << " and 0?" << endl;
    cin >> userGuess;
    cout << userGuess << endl;
    cout << "===============================" << endl;
    
    for (int i = num; i > 0; i--) {
        if ((i == 2) || (i == 3) || (i == 5) || (i == 7)) {
            result++;
            cout << i << " - prime." << endl;
        }
        else if (i == 1) {
            //cout << i << " - not prime." << endl;
        }
        else if (i % 2 == 0){
            //cout << i << " - not prime." << endl;
        }
        else if (i % 3 == 0){
            //cout << i << " - not prime." << endl;
        }
        else if (i % 5 == 0){
            //cout << i << " - not prime." << endl;
        }
        else if (i % 7 == 0){
            //cout << i << " - not prime." << endl;
        }
        else{
            cout << i << " - prime." << endl;
            result++;
        }
    }
    cout << "===============================" << endl;
    cout << result << endl;
    
    if (userGuess == result) {
        cout << "You guessed " << userGuess << ". That is correct." << endl;
    }
    else {
        cout << "You guessed " << userGuess << ". That is incorrect." << endl;
    }     
         
    return 0;
}

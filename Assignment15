#include <iostream>
#include <string>
#include <vector>

using namespace std;

void printSets(vector<string>, vector<string>);
void addItem(vector<string>);
void unionAB(vector<string>, vector<string>);
void intersectAB(vector<string>, vector<string>);
void subAB(vector<string>, vector<string>);
void subBA(vector<string>, vector<string>);
void crossAB(vector<string>, vector<string>);
void powersetA(vector<string>, vector<string>);
void powersetB(vector<string>, vector<string>);
char userChoice();

int main() {
    
    vector<string> A;
    vector<string> B;
    char cont;
    
    printSets(A, B);
    
    while(cont != 'n' && cont != 'N') {
        switch (userChoice()) {
            case '1':
                break;
            case '2':
                break;
            case '3':
                break;
            case '4':
                break;
            case '5':
                break;
            case '6':
                break;
            case '7':
                break;
            case '8':
                break;
            case '9':
                break;
            case '0':
                break;
            default:
                cout << "Error";
                break;
        }
        
        cout << "\n\nContinue? Y/N: ";
        cin >> cont;
        if (cont == 'n' || cont == 'N') {
            return 0;
        }
        else 
        cout << "\n";
    }
    
    
    return 0;
}

void printSets(vector<string> a, vector<string> b) {
    cout << "Set A = {";
    if (a.empty() == true) {
        cout << "";
    }
    else {
        cout << "{";
        for(auto element: a){
            cout << element;
        }
        cout << "}";
    }
    cout << "}\n";
    
    cout << "Set B = {";
    if (b.empty() == true) {
        cout << "";
    }
    else {
        cout << "{";
        for(auto element: b){
            cout << element;
        }
        cout << "}";
    }
    cout << "}\n\n";
}

char userChoice () {
    char choice;
    
    cout << "1 : Add Item to A\n"
         << "2 : Add Item to B\n"
         << "3 : A U B\n"
         << "4 : A ^ B\n"
         << "5 : A - B\n"
         << "6 : B - A\n"
         << "7 : A X B\n"
         << "8 : Powerset of A\n"
         << "9 : Powerset of B\n\n";
             
    cin >> choice;
    
    return choice;
}




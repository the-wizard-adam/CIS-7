#include <iostream>

using namespace std;

int findFactor(int, int);

int main()
{
    int num;
    do {
        cout << "Enter a number greater than 1: " << endl;
        cin >> num;
        if (num <= 1) {
            cout << "Invalid input." << endl;
        }
    } while (num <= 1);
    
    for (int i = 2; i < num; i++) {
        if (findFactor(i, num) == 0) {
        }
        else {
            cout << i << " & " << findFactor(i, num) << endl;
            cout << "   ";
            num = findFactor(i, num);
            i = 1;
        }
    }

    return 0;
}

int findFactor (int i, int num) {
    if (num % i == 0) {
        return num / i;
    }
    else {
        return 0;
    }
}




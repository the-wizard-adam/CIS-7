#include <iostream>

using namespace std;

void addVertex(int[][0]);
void addEdge(int[][0]);
int highestDegree(int[][0]);
int findIsoVert(int[][0]);
int findLoops(int[][0]);
void displayMatrix(int[][0]);

int main () {
    
    int matrix[][0] = {};
    char input;
    
    displayMatrix(matrix);
    
    cout << "Vertex with highest degree: " << endl;
    cout << "Isolated vertices: " << endl;
    cout << "Loops : " << endl;
    cout << "Connected: " << endl;
    cout << "Complete: "  << endl << endl;
    
    cout << "1. Add Vertex" << endl;
    cout << "2. Add Edge" << endl;
    cout << "3. QUIT" << endl;
    cout << "INPUT: ";
    cin >> input;
    while (true) {
        switch (input) {
            case '1':
                addVertex(matrix);
                break;
            case '2':
                addEdge(matrix);
                break;
            case '3':
                return 0;
            default:
            cout << "Error!";
                break;
        }
    }
    return 0;
}


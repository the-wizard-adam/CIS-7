void displayMenu(int m[][]) {
    char input;
    
    cout << "Vertex with highest degree: " << endl;
    cout << "Isolated vertices: " << endl;
    cout << "Loops : " << endl;
    cout << "Connected: " << endl;
    cout << "Complete: "  << endl << endl;
    
    cout << "1. Add Vertex" << endl;
    cout << "2. Add Edge" << endl;
    cout << "3. QUIT:" << end;
    cout << "INPUT: ";
    cin >> input;
    
    switch (input) {
        case '1':
            addVertex();
            break;
        case '2':
            addEdge(int, int);
            break;
        case '3':
            return 0;
        default:
        cout << "Error!";
            break;
    }
}
